{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "plugin:react/recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "key-spacing": [{ "after-colon": true }],
    "max-len": [{ "code": 80 }],
    "quotes": ["single"],
    "semi": ["never"],
    "rest-spread-spacing": ["always"]
  }
}
